@{
    ViewBag.Title = "VideoEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AUSUMediaSite.EF.tbMediaInfo
<h2>VideoEdit</h2>


<div class="row">
  <div class="col-md-4">
    <br>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane active in" id="home">
      <form id="tab">
        <div class="form-group">
        <label>视频名称</label>
        <input type="text" value="@Model.MediaName" class="form-control" id="MediaName">
        </div>
        <div class="form-group">
        <label>视频文件</label>
        <input type="text" value="@Model.MediaUrl" class="form-control">
        </div>
        <div class="form-group">
        <label>视频字幕</label>
        <input type="text" value="@Model.SubTitle" class="form-control">
        </div>
        <div class="form-group">
        <label>视频大小</label>
        <input type="text" value="@Model.MediaSize" class="form-control">
        </div>

        <div class="form-group">
            <label>Time Zone</label>
            <select name="DropDownMediaType" id="DropDownMediaType" class="form-control">
            </select>
          </div>
        </form>
      </div>

      <div class="tab-pane fade" id="profile">

        <form id="tab2">
          <div class="form-group">
            <label>New Password</label>
            <input type="password" class="form-control">
          </div>
          <div>
              <button class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </div>

    <div class="btn-toolbar list-toolbar">
      <button class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
      <a href="#myModal" data-toggle="modal" class="btn btn-danger">Delete</a>
    </div>
  </div>

</div>
